                <!-- Linhas pretas verticais -->
                <div class="vertical-line-1 black"></div>
                <div class="vertical-line-2 black"></div>
                <div class="vertical-line-3 black"></div>
                <div class="vertical-line-4 black"></div>
                <div class="vertical-line-5 black"></div>
                <div class="vertical-line-6 black"></div>
                
                <!-- Elementos coloridos da composição -->
