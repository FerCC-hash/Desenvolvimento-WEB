        /* Posicionamento dos elementos na grid */

        /* Grande retângulo vermelho central */
        .element-1 {
            grid-column: 2 / 7;
            grid-row: 2 / 7;
        }

        /* Retângulo azul superior direito */
        .element-2 {
            grid-column: 7 / 10;
            grid-row: 2 / 5;
        }

        /* Retângulo azul inferior direito */
        .element-3 {
